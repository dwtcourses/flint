{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "src": ["src"],
      "resources": ["resources"]
    }
  },
  "exclude": [
    "node_modules",
    "src/electron",
    "dist"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ]
}